{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) 附加",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/Debug/bin/postgres",
            "MIMode": "lldb"
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Debug/bin/pg_dump",
            "args": ["-d", "postgres"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Debug/bin/pg_dump",
            "preLaunchTask": "clear",
            "args": ["-Fd", "-f", "dumpdir", "--section=pre-data", "--compress=0", "postgres"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Debug multi process",
                    "text": "-lldb-set detach-on-fork off",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(lldb) Launch restore",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Debug/bin/pg_restore",
            //"preLaunchTask": "clear",
            "args": ["-d", "postgres", "-v", "dumpdir"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Debug multi process",
                    "text": "-lldb-set detach-on-fork off",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}